+++
title = "{{ title }}"
template = "{{ template }}"
[extra]
artist = "{{ artist | escape_toml }}"
albums = [
{% for album in albums -%}
  { title = "{{ album.title | escape_toml }}", year = "{{ album.year }}", tracks = {{ album.tracks }} },
{% endfor -%}
]
{% if tracks -%}
tracks = [
{% for track in tracks -%}
  { title = "{{ track.title | escape_toml }}", length = "{{ track.length }}", year = "{{ track.year }}" },
{% endfor -%}
]
{% endif -%}
+++

